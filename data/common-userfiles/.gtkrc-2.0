gtk-theme-name="oxygen-gtk"
gtk-icon-theme-name="oxygen-ionized_v1"
gtk-fallback-icon-theme="gnome-wise"
gtk-font-name="DejaVu Sans Book 9"
gtk-cursor-theme-name="crystalgreen"
gtk-cursor-theme-size=0
gtk-toolbar-style=GTK_TOOLBAR_BOTH_HORIZ
#gtk-toolbar-icon-size=GTK_ICON_SIZE_LARGE_TOOLBAR
gtk-button-images=1
gtk-menu-images=1
gtk-enable-event-sounds=0
gtk-enable-input-feedback-sounds=0
gtk-alternative-button-order = 1

## customization
# font overide
style "user-font" 
{
	font_name="DejaVu Sans Book"
}
widget_class "*" style "user-font"

# gimp tuning from oxyge-gtk theme
style "oxygen-gimp-scale"
 {
     # this ensures that toolpanels fonts in gimp is identical
     # to default font (which otherwise is ugly
     GimpDock::font-scale = 1.01
 }

class "*" style "oxygen-gimp-scale"
